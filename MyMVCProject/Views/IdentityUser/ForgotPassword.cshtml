@model ForgotPasswordViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Password Recovery";
}
<h2 class="h3 mb-3 text-muted text-center fw-bold">Forgot Password</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-8 col-md-6">
            <form class="mt-4" method="post">
                <div class="text-center text-danger" asp-validation-summary="All"></div>
                <label asp-for="Email"></label>
                <div class="input-group">
                    <input type="email" asp-for="Email" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Email"></span> <br />
                <button type="submit" class="btn btn-primary mt-3">Send Email</button>

            </form>
        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

