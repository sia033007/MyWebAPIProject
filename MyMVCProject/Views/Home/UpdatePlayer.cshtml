@model Player
@{
    ViewData["title"] = "Update Player";
}
<div class="text-end">
    <a asp-action="GetAllPlayers" class="btn btn-outline-primary mt-2 w-25">Back</a>
</div>
<h2 class="h3 mb-3 text-muted text-center fw-bold">Update Player</h2>
<form class="mt-3" method="post">
    <label asp-for="Name"></label>
    <div class="input-group">
        <input asp-for="Name" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="Name"></span> <br />
    <label asp-for="Position"></label>
    <div class="input-group">
        <input asp-for="Position" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="Position"></span> <br />
    <label asp-for="Nationality"></label>
    <div class="input-group">
        <input asp-for="Nationality" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="Nationality"></span> <br />
    <button class="btn btn-primary mt-2 h-100">Update Player</button>

</form>

@if (Model != null)
{
    <table class="table text-center table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>Nationality</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td class="bg-warning">@Model.Name</td>
                <td class="bg-primary">@Model.Position</td>
                <td class="bg-info">@Model.Nationality</td>
            </tr>
        </tbody>
    </table>
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}