@model Player
@{
    ViewData["title"] = "Get Player";
}
<h2>Get Player By Id</h2>
<form class="mt-3" method="post">
    <label for="id">Id :</label>
    <div class="input-group">
        <input type="number" class="form-control" name="id" />
    </div> <br />
    <button class="btn btn-primary mt-2">Get Player</button>
</form>

@if (Model != null && TempData["success"] != null)
{
    <table class="table table-striped table-bordered text-center mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>Nationality</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td class="bg-warning">@Model.Name</td>
                <td class="bg-primary">@Model.Position</td>
                <td class="bg-info">@Model.Nationality</td>
            </tr>
        </tbody>
    </table>
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}